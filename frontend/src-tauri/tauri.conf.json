{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "frontend",
  "version": "0.1.0",
  "identifier": "com.gch2021.frontend",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "frontend",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "Entitlements.plist",
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "Writers Factory uses speech recognition for voice-to-text input in the chat interface.",
        "NSMicrophoneUsageDescription": "Writers Factory uses the microphone for voice input and dictation features."
      }
    }
  }
}
